#: import Board ELiDE.board.Board
#: import TravellingPawn app.TravellingPawn
<TravellingPawn>:
    app: app
<ImmediatePlayView>:
    BoxLayout:
        BoxLayout:
            id: buttons
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                id: go2class
                disabled: root.disabled or not root.class_time
                text: "Go to class"
                on_release: root.go_to_class()
            Button:
                id: sleep
                disabled: root.disabled or not root.sleepy
                text: "Sleep"
                on_release: root.go_to_sleep()
            Button:
                id: eat
                disabled: root.disabled or not root.hungry
                text: "Eat"
                on_release: root.eat_food()
            Button:
                id: soc
                disabled: root.disabled or not root.people_present
                text: "Socialize"
                on_release: root.socialize()
        Board:
            id: board
            size_hint_x: 0.6
            engine: root.engine
            character: root.character
            pawn_cls: TravellingPawn
<Screens>:
    ImmediatePlayView:
        name: 'play'
        character: self.engine.character['physical']
        player: self.engine.character['josephine']
